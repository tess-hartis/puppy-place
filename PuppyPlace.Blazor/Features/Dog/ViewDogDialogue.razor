<div class="modal fade show" id="viewDogModal" style="display: block; 
background-color: rgba(10, 10, 10, .8);" aria-modal="true" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">@Name</h4>
                <button type="button" class="btn-close" @onclick="@ModalCancel"></button>
            </div>
            <div class="modal-body">
                <p>Age: @Age</p>
                <p>Breed: @Breed</p>
                <p>ID: @Id</p>
                <p>Owners:</p>
                @if (Owners != null)
                {
                    @if (Owners.Any())
                    {
                        @foreach (var owner in Owners)
                        {
                            <p>@owner</p>
                        }
                    }
                    else
                    {
                        <p>There are no owners to show</p>
                    }
                
                }
                else
                {
                    <p>There are no owners to show</p>
                }


            </div>
            <div class="modal-footer">
                <a href="/add-owner/{@Id}" class="btn btn-dark">Add Owner</a>
                <button type="button" class="btn btn-primary" @onclick="@ModalOk">Close</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string Name { get; set; }
    [Parameter]
    public string Age { get; set; }
    [Parameter]
    public string Breed { get; set; }
    [Parameter]
    public Guid Id { get; set; }
    [Parameter]
    public IEnumerable<string>? Owners { get; set; }
    [Parameter]
    public EventCallback<bool> OnClose { get; set; }

    private Task ModalCancel()
    {
        return OnClose.InvokeAsync(false);
    }

    private Task ModalOk()
    {
        return OnClose.InvokeAsync(true);
    }
}