@page "/persons"
@using PuppyPlace.Blazor.Features.Shared
@inject HttpClient _httpClient

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                Persons
            </div>
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>&nbsp;</th>
                        <th>&nbsp;</th>
                    </tr>
                    </thead>
                    <tbody>
                    @if (PersonList != null)
                    {
                        @foreach (var person in PersonList)
                        {
                            <tr>
                                <td>@person.Name</td>
                                <td><button type="button"
                                            class="btn btn-danger"
                                            @onclick="(() => OpenDeleteDialogue(person))">Delete</button></td>
                                <td>
                                    <a href="@($"/person/{person.Id}")" class="btn btn-info">Info</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td><em>Loading...</em></td></tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <AddPersonForm OnSubmitCallback="@Refresh"></AddPersonForm>
    </div>
</div>
<div>&nbsp;</div>
@if (DeleteDialogueOpen)
{
    <ModalDialogue
        Title="Are you sure?"
        Text="Do you want to delete this entry?"
        OnClose="@OnDeleteDialogueClose"
        DialogueType="ModalDialogue.ModalDialogueType.DeleteCancel">
    </ModalDialogue>
}
@if (ViewEntityDialogueOpen)
{
    <ViewPersonDialogue 
        Name="@_personToView.Name"
        Id="@_personToView.Id"
        Dogs="@_personToView.Dogs"
        OnClose="@OnViewDialogueClose">
    </ViewPersonDialogue>
}

@code {
    public IEnumerable<GetPersonDto>? PersonList { get; set; } = new List<GetPersonDto>();

    private GetPersonDto? _persontoDelete;
    public bool DeleteDialogueOpen { get; set; }

    private GetPersonDto _personToView;
    public bool ViewEntityDialogueOpen { get; set; }

    private async Task OnDeleteDialogueClose(bool accepted)
    {
        if (accepted)
        {
            await _httpClient.DeleteAsync($"Person/{_persontoDelete.Id}");
            await LoadData();
            _persontoDelete = null;
        }
        
        DeleteDialogueOpen = false;
        StateHasChanged();
    }
    
    private void OpenDeleteDialogue(GetPersonDto person)
    {
        DeleteDialogueOpen = true;
        _persontoDelete = person;
        StateHasChanged();
    }
    
    private async Task OnViewDialogueClose(bool accepted)
    {
        ViewEntityDialogueOpen = false;
    }

    private void OpenViewDialogue(GetPersonDto person)
    {
        ViewEntityDialogueOpen = true;
        _personToView = person;
    }
    
    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        PersonList = await _httpClient
            .GetFromJsonAsync<IEnumerable<GetPersonDto>>("Person");
        StateHasChanged();
    }

    private async void Refresh()
    {
        await LoadData();
    }

}